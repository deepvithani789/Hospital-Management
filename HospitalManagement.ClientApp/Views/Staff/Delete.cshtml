@model HospitalManagement.ClientApp.Models.Staff

@{
    ViewData["Title"] = "Delete Staff";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 600px; width: 100%;">

        <!-- Warning Header -->
        <div class="card-header bg-danger text-white text-center rounded-3">
            <h3><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h3>
        </div>

        <div class="card-body text-center">
            <p class="text-danger fw-bold"><i class="fas fa-exclamation-circle"></i> Are you sure you want to delete this staff member?</p>

            <!-- Staff Info -->
            <div class="bg-light p-3 rounded shadow-sm">
                <h4 class="mt-3 text-dark">@Model.FullName</h4>
                <h5 class="text-muted">@Model.Position</h5>
            </div>

            <!-- Staff Details -->
            <table class="table table-bordered mt-3">
                <tr>
                    <th>🆔 Aadhar Card</th>
                    <td>@Model.AdharCard</td>
                </tr>
                <tr>
                    <th>⚧️ Gender</th>
                    <td>@Model.Gender</td>
                </tr>
                <tr>
                    <th>🎂 Date of Birth</th>
                    <td>@Model.DateOfBirth.ToString("yyyy-MM-dd")</td>
                </tr>
                <tr>
                    <th>📞 Contact</th>
                    <td>@Model.ContactNumber</td>
                </tr>
                <tr>
                    <th>📧 Email</th>
                    <td>@Model.Email</td>
                </tr>

                <tr>
                    <th>📍 Address</th>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <th>⏰ Shift</th>
                    <td><span class="badge bg-info text-dark">@Model.Shift</span></td>
                </tr>
                <tr>
                    <th>💰 Salary</th>
                    <td><strong>@Model.Salary.ToString("C")</strong></td>
                </tr>
                <tr>
                    <th>📅 Date Joined</th>
                    <td>@Model.DateJoined.ToString("yyyy-MM-dd")</td>
                </tr>
            </table>

            <!-- Delete Form -->
            <form asp-action="Delete" method="post" id="deleteForm">
                <input type="hidden" asp-for="Id" />

                <!-- Action Buttons -->
                <div class="mt-4">
                    <button type="button" class="btn btn-danger px-4" onclick="confirmDelete()">
                        <i class="fas fa-trash-alt"></i> Yes, Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Script -->
<script>
    function confirmDelete() {
        if (confirm("⚠️ Are you absolutely sure you want to delete @Model.FullName? This action cannot be undone.")) {
            document.getElementById("deleteForm").submit();
        }
    }
</script>
