@model HospitalManagement.ClientApp.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container mt-5">
    <div class="card shadow-lg border border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h3><i class="fas fa-exclamation-triangle"></i> Confirm Patient Deletion</h3>
        </div>

        <div class="card-body text-center">
            <h5 class="text-danger fw-bold">This action cannot be undone!</h5>
            <p>You are about to delete the patient record for:</p>

            <div class="p-3 border rounded bg-light">
                <h4 class="text-primary"><i class="fas fa-user-injured text-primary"></i> @Model.Name</h4>
                <p><strong>Gender:</strong> @Model.Gender</p>
                <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Contact Number:</strong> @Model.ContactNumber</p>
                <p><strong>Address:</strong> @Model.Address</p>
                <p><strong>Blood Group:</strong> @Model.BloodGroup</p>
                <p><strong>Chronic Disease:</strong> @Model.ChronicDisease</p>
                <p><strong>Aadhaar Card:</strong> @Model.AdhaarCard</p>
            </div>

            <p class="text-danger mt-3">Are you sure you want to proceed?</p>

            <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this patient? This action cannot be undone!');">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg"><i class="fas fa-trash-alt"></i> Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg"><i class="fas fa-times"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>

<!-- FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
