@model HospitalManagement.ClientApp.Models.Patient

@{
    ViewData["Title"] = "Edit Patient";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <!-- Page Header with Patient Avatar -->
        <div class="text-center mb-4">
            <h2 class="mt-3 text-success fw-bold">
                <i class="fas fa-edit me-2"></i> Edit Patient
            </h2>
            <p class="text-muted">Modify the details below and save changes.</p>
        </div>

        <!-- Patient Form -->
        <form asp-action="Edit" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <!-- Name -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold"><i class="fas fa-user me-1"></i> Name</label>
                    <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter patient's full name" required />
                </div>

                <!-- Email -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold"><i class="fas fa-envelope me-1"></i> Email</label>
                    <input asp-for="Email" class="form-control shadow-sm" type="email" placeholder="Enter email address" required />
                </div>

                <!-- Date of Birth -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold"><i class="fas fa-calendar-alt me-1"></i> Date of Birth</label>
                    <input asp-for="DateOfBirth" class="form-control shadow-sm" type="date" required />
                </div>

                <!-- Gender -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold"><i class="fas fa-venus-mars me-1"></i> Gender</label>
                    <select asp-for="Gender" class="form-select shadow-sm" required>
                        <option selected disabled>Choose...</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <!-- Contact Number -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold"><i class="fas fa-phone-alt me-1"></i> Contact Number</label>
                    <input asp-for="ContactNumber" class="form-control shadow-sm" placeholder="Enter phone number" required />
                </div>

                <!-- Address -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold"><i class="fas fa-map-marker-alt me-1"></i> Address</label>
                    <textarea asp-for="Address" class="form-control shadow-sm" rows="3" placeholder="Enter full address" required></textarea>
                </div>

                <!-- Blood Group -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold"><i class="fas fa-tint me-1"></i> Blood Group</label>
                    <input asp-for="BloodGroup" class="form-control shadow-sm" placeholder="Enter blood group (e.g., A+, O-)" required />
                </div>

                <!-- Chronic Disease -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold"><i class="fas fa-heartbeat me-1"></i> Chronic Disease</label>
                    <input asp-for="ChronicDisease" class="form-control shadow-sm" placeholder="Enter chronic disease (if any)" />
                </div>

                <!-- Aadhaar Card -->
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold"><i class="fas fa-id-card me-1"></i> Aadhaar Card</label>
                    <input asp-for="AdhaarCard" class="form-control shadow-sm" placeholder="Enter Aadhaar Card number" required />
                </div>
            </div>

            <!-- Form Actions -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-warning px-4 shadow">
                    <i class="fas fa-save"></i> Update Patient
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 shadow">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
