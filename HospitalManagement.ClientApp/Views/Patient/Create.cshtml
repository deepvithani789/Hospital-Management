@model HospitalManagement.ClientApp.Models.Patient

@{
    ViewData["Title"] = "Add New Patient";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 p-4" style="background: #f9f9f9;">
                <!-- Header with Patient Icon -->
                <div class="text-center">
                    <h2 class="mt-3 text-success fw-bold">
                        <i class="fas fa-user-plus me-2"></i> Register a New Patient
                    </h2>
                    <p class="text-muted">Fill in the details below to add a new patient to the system.</p>
                </div>

                <!-- Patient Form -->
                <form asp-action="Create" method="post" class="mt-4">
                    <div class="row">
                        <!-- Name -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-user me-1"></i> Full Name</label>
                            <input asp-for="Name" class="form-control shadow-sm rounded-3"
                                   placeholder="Enter patient's full name" required />
                        </div>

                        <!-- Email -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-envelope me-1"></i> Email Address</label>
                            <input asp-for="Email" class="form-control shadow-sm rounded-3"
                                   type="email" placeholder="Enter email address" required />
                        </div>

                        <!-- Date of Birth -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-calendar-alt me-1"></i> Date of Birth</label>
                            <input asp-for="DateOfBirth" class="form-control shadow-sm rounded-3"
                                   type="datetime-local" required />
                        </div>

                        <!-- Gender -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-venus-mars me-1"></i> Gender</label>
                            <select asp-for="Gender" class="form-select shadow-sm rounded-3" required>
                                <option selected disabled>Choose...</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <!-- Contact Number -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-phone-alt me-1"></i> Contact Number</label>
                            <input asp-for="ContactNumber" class="form-control shadow-sm rounded-3"
                                   placeholder="Enter phone number" required />
                        </div>

                        <!-- Address -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-map-marker-alt me-1"></i> Address</label>
                            <textarea asp-for="Address" class="form-control shadow-sm rounded-3"
                                      rows="3" placeholder="Enter full address" required></textarea>
                        </div>

                        <!-- Blood Group -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-tint me-1"></i> Blood Group</label>
                            <input asp-for="BloodGroup" class="form-control shadow-sm rounded-3"
                                   placeholder="Enter blood group (e.g., A+, O-)" required />
                        </div>

                        <!-- Chronic Disease -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-heartbeat me-1"></i> Chronic Disease</label>
                            <input asp-for="ChronicDisease" class="form-control shadow-sm rounded-3"
                                   placeholder="Enter chronic disease (if any)" />
                        </div>

                        <!-- Aadhaar Card -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-id-card me-1"></i> Aadhaar Card</label>
                            <input asp-for="AdhaarCard" class="form-control shadow-sm rounded-3"
                                   placeholder="Enter Aadhaar Card number" required />
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success px-4 shadow rounded-3">
                            <i class="fas fa-check"></i> Save Patient
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-4 shadow rounded-3">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
