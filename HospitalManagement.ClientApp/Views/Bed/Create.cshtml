@model HospitalManagement.ClientApp.Models.Bed
@{
    ViewData["Title"] = "Create Bed";
}

<div class="container py-4" style="max-width: 480px;">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-background text-white rounded-top-4 d-flex align-items-center gap-3">
            <i class="bi bi-plus-square fs-3"></i>
            <h3 class="mb-0 fw-semibold">Create New Bed</h3>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post" novalidate>
                <div class="mb-4">
                    <label asp-for="BedNumber" class="form-label fw-semibold">Bed Number</label>
                    <input asp-for="BedNumber" class="form-control form-control-lg" placeholder="Enter bed number" required />
                    <span asp-validation-for="BedNumber" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="RoomType" class="form-label fw-semibold">Room</label>
                    <select asp-for="RoomType" class="form-select form-select-lg" aria-label="Select ward" required>
                        <option value="" selected>Select room</option>
                        <option value="General">General</option>
                        <option value="AC">AC</option>
                        <option value="Non-AC">Non-AC</option>
                        <option value="Deluxe">Deluxe</option>
                        <option value="VIP">VIP</option>
                        <option value="ICU">ICU</option>
                    </select>
                    <span asp-validation-for="RoomType" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-lg text-white" style="background-color: #c06788; border-color: #c06788;">
                        <i class="bi bi-check-circle me-1"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>

    .bg-background{
        background-color: #c06788;
    }

    /* Smooth card shadow hover */
    .card:hover {
        box-shadow: 0 8px 24px rgb(0 0 0 / 0.15);
        transition: box-shadow 0.3s ease-in-out;
    }

    /* Input and select focus */
    input.form-control:focus,
    select.form-select:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 0.2rem rgb(59 130 246 / 0.25);
        outline: none;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

    /* Labels style */
    label.form-label {
        color: #334155;
    }

    /* Validation message style */
    span.text-danger {
        font-weight: 500;
    }
</style>
