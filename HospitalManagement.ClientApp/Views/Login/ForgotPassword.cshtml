@model HospitalManagement.ClientApp.Models.ForgotPasswordDto
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Forgot Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;600&display=swap" rel="stylesheet" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Outfit', sans-serif;
        }

        .container-full {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .left-panel {
            flex: 1;
            background: linear-gradient(135deg, #2E3192, #1BFFFF);
            color: white;
            padding: 4rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
        }

            .left-panel h1 {
                font-size: 2.8rem;
                font-weight: 600;
                margin-bottom: 1rem;
            }

            .left-panel p {
                font-size: 1.1rem;
                opacity: 0.9;
            }

        .right-panel {
            flex: 1;
            background-color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem;
        }

        .form-box {
            width: 100%;
            max-width: 400px;
        }

            .form-box h3 {
                font-weight: 600;
                margin-bottom: 1.5rem;
                color: #2E3192;
            }

        .form-control {
            height: 48px;
        }

        .btn-reset {
            background-color: #2E3192;
            color: #fff;
            border: none;
            height: 48px;
            transition: all 0.3s ease;
        }

            .btn-reset:hover {
                background-color: #1e256d;
                color: #e0e0e0;
            }

        .feedback-icon {
            margin-right: 0.5rem;
        }

        .link-back {
            display: inline-block;
            margin-top: 1rem;
            text-decoration: none;
            color: #2E3192;
            font-weight: 500;
        }

            .link-back:hover {
                text-decoration: underline;
            }

        @@media (max-width: 768px) {
            .container-full {
                flex-direction: column;
            }

            .left-panel, .right-panel {
                flex: unset;
                width: 100%;
                text-align: center;
                align-items: center;
            }

            .left-panel {
                padding: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container-full">
        <div class="left-panel">
            <h1>Forgot Your Password?</h1>
            <p>If the email you enter is registered, you'll be redirected to reset your password instantly. No waiting for email links — it's quick and direct.</p>
        </div>

        <div class="right-panel">
            <div class="form-box">
                <h3>Reset Access</h3>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success d-flex align-items-center">
                        <i class="bi bi-check-circle-fill feedback-icon"></i>
                        <div>@ViewBag.Message</div>
                    </div>
                }

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill feedback-icon"></i>
                        <div>@ViewBag.Error</div>
                    </div>
                }

                <form asp-action="ForgotPassword" method="post" autocomplete="off">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="you@example.com" type="email" required />
                    </div>

                    <button type="submit" class="btn btn-reset w-100">Continue</button>
                </form>

                <a asp-action="Index" class="link-back"><i class="bi bi-arrow-left"></i> Back to Login</a>
            </div>
        </div>
    </div>
</body>
</html>
