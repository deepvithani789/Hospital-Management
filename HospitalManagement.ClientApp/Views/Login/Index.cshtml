@model HospitalManagement.ClientApp.Models.Login

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@if (!string.IsNullOrEmpty(ViewBag.AccessDeniedMessage))
{
    <script>
        alert("@ViewBag.AccessDeniedMessage");
    </script>
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hospital Management - Login</title>

    <!-- Bootstrap and Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        /* Fullscreen Background */
        body {
            background: linear-gradient(to right, #dff6ff, #86c3ff);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Poppins', sans-serif;
            color: #333;
            overflow: hidden;
            position: relative;
        }

        /* Animated Medical Background */
        .background-overlay {
            position: absolute;
            width: 100%;
            height: 100%;
            background: url('https://cdn.pixabay.com/photo/2016/10/18/08/37/stethoscope-1741832_1280.jpg') no-repeat center center;
            background-size: cover;
            opacity: 0.1;
            z-index: -1;
            animation: fadeIn 3s ease-in-out;
        }

        /* Login Container */
        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            width: 100%;
        }

        /* Floating Login Box with Glass Effect */
        .login-box {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.3);
            padding: 40px;
            border-radius: 12px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            animation: slideUp 1s ease-in-out;
            text-align: center;
        }

            /* Header */
            .login-box h3 {
                font-weight: bold;
                color: #0072ff;
                margin-bottom: 20px;
            }

        /* Input Fields */
        .form-control {
            background: transparent;
            border: 2px solid rgba(0, 114, 255, 0.3);
            color: #333;
            padding: 12px;
            border-radius: 8px;
            outline: none;
            transition: 0.3s;
        }

            .form-control:focus {
                border-color: #0072ff;
                box-shadow: 0 0 10px rgba(0, 114, 255, 0.5);
            }

        /* Buttons */
        .btn-login {
            background: linear-gradient(to right, #00c6ff, #0072ff);
            border: none;
            padding: 12px;
            border-radius: 8px;
            font-weight: bold;
            color: white;
            transition: 0.3s;
            width: 100%;
            margin-top: 20px;
        }

            .btn-login:hover {
                background: linear-gradient(to right, #0072ff, #00c6ff);
            }

        .btn-register {
            background: linear-gradient(to right, #00ff99, #00cc66);
            border: none;
            padding: 12px;
            border-radius: 8px;
            font-weight: bold;
            color: white;
            transition: 0.3s;
            width: 100%;
            margin-top: 10px;
        }

            .btn-register:hover {
                background: linear-gradient(to right, #00cc66, #00ff99);
            }

        .btn-google {
            background-color: #db4437;
            color: white;
            padding: 12px;
            border-radius: 8px;
            font-weight: bold;
            transition: 0.3s;
            width: 100%;
            margin-top: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-google:hover {
                background-color: #c1351d;
            }

            .btn-google i {
                margin-right: 8px;
            }

        /* Alert Box */
        .alert {
            padding: 10px;
            border-radius: 8px;
            font-size: 14px;
        }

        /* Footer */
        .footer {
            position: absolute;
            bottom: 20px;
            font-size: 14px;
            color: #555;
        }
    </style>
</head>
<body>

    <div class="background-overlay"></div>

    <div class="login-container">
        <h1 class="text-primary fw-bold">🏥 Hospital Management System</h1>
        <p class="text-muted">Secure & Efficient Healthcare Management</p>

        <!-- Floating Login Box -->
        <div class="login-box">
            <h3>🔐 Login</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="📧 Email" required />
                </div>

                <div class="mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="🔒 Password" required />
                </div>

                <button type="submit" class="btn btn-login">🚀 Login</button>
            </form>

            <a asp-controller="Register" asp-action="Index" class="btn btn-register">📝 Register</a>
            <a asp-action="GoogleLogin" class="btn btn-google">
                <i class="fab fa-google"></i> Sign in with Google
            </a>

        </div>
    </div>

    <p class="footer">© 2025 Hospital Management System</p>

</body>
</html>
