@{
    ViewData["Title"] = "Access Restricted";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string role = ViewBag.UserRole?.ToString()?.ToLower() ?? "";
    string roleDisplay = role switch
    {
        "doctor" => "Doctor",
        "patient" => "Patient",
        "receptionist" => "Receptionist",
        "cashier" => "Cashier",
        "pharmacist" => "Pharmacist",
        _ => "User"
    };

    string message = role switch
    {
        "doctor" => "You're logged in as a Doctor but not yet authorized in our hospital's staff records.",
        "receptionist" => "You're signed in as a Receptionist, but not registered in the staff directory.",
        "cashier" => "You are marked as a Cashier, but we couldn't find your staff assignment.",
        "pharmacist" => "Your role is Pharmacist, but you’re currently not listed in our staff database.",
        "patient" => "You need to be registered as a Patient in our system to proceed.",
        _ => "You currently don’t have permission to view this page. Please get in touch with support."
    };
}
<div class="access-hero">
    <div class="access-card animate__animated animate__fadeInDown">
        <div class="icon-wrapper">
            <i class="fas fa-user-lock"></i>
        </div>
        <h2 class="title">Restricted Access</h2>
        <p class="subtitle">Hello <strong>@roleDisplay</strong>,</p>
        <p class="description">
            Your account has been identified as <strong>@roleDisplay</strong>, but it appears that you're not yet authorized to access this section of the system. This may be due to pending registration or role validation within our internal records.
        </p>

        <div class="notice-box">
            <i class="fas fa-info-circle me-2"></i> If you believe this is incorrect, kindly reach out to the hospital administrator for verification or support.
        </div>

        <div class="btn-group mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn primary-btn">
                <i class="fas fa-home me-1"></i> Return to Dashboard
            </a>
            <a href="#" class="btn outline-btn" data-bs-toggle="modal" data-bs-target="#adminContactModal">
                <i class="fas fa-envelope"></i> Contact Admin
            </a>
        </div>
    </div>
</div>
<!-- Modern Admin Contact Modal -->
