@{
    ViewData["Title"] = "Contact Us";
}

@if (TempData["ContactMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["ContactMessage"]
    </div>
}

<!-- Hero Section with Full Background -->
    <div class="container">
        <h1 class="display-5 font-weight-bold">Get In Touch With Us</h1>
        <p class="lead">Have any questions, concerns, or feedback? We’re here to assist you!</p>
    </div>

<!-- Main Content Section with Asymmetrical Layout -->
<div class="container py-5">
    <div class="row">
        <!-- Contact Information Section -->
        <div class="col-md-6 mb-4">
            <div class="contact-info">
                <h3 class="text-primary mb-4">Contact Information</h3>
                <div class="contact-item mb-3">
                    <i class="bi bi-envelope-fill me-3"></i>
                    <strong>Email:</strong> <a href="mailto:deepvithani789@gmail.com" class="text-decoration-none">deepvithani789@gmail.com</a>
                </div>
                <div class="contact-item mb-3">
                    <i class="bi bi-telephone-fill me-3"></i>
                    <strong>Phone:</strong> <a href="tel:+919876543210" class="text-decoration-none">+91 9876543210</a>
                </div>
            </div>
        </div>

        <!-- Feedback Form Section -->
        <div class="col-md-6">
            <form method="post" action="@Url.Action("SendContact", "Home")">
                <div class="form-container shadow-lg rounded p-4">
                    <h4 class="text-primary mb-4">Leave Us a Message</h4>

                    <!-- Name Field -->
                    <div class="form-floating mb-4">
                        <input type="text" class="form-control" id="name" name="name" required placeholder="Enter your full name" />
                        <label for="name">Your Name</label>
                    </div>

                    <!-- Email Field -->
                    <div class="form-floating mb-4">
                        <input type="email" class="form-control" id="email" name="email" required placeholder="youremail@example.com" />
                        <label for="email">Your Email</label>
                    </div>

                    <!-- Message Field -->
                    <div class="form-floating mb-4">
                        <textarea class="form-control" id="message" name="message" rows="4" required placeholder="Please type your message here..."></textarea>
                        <label for="message">Your Message</label>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm custom-button">Send Message</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom Styles -->
<style>
    .hero-section {
        background: linear-gradient(to right, #4f92c2, #62d0db);
        color: white;
        text-align: center;
        padding-top: 100px;
    }

    .contact-info {
        padding: 20px;
        background-color: #f0f8ff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .contact-item {
        font-size: 18px;
        color: #333;
        transition: all 0.3s ease;
    }

        .contact-item:hover {
            color: #007bff;
            transform: translateX(10px);
        }

    .form-container {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .form-floating {
        position: relative;
        z-index: 0;
    }

        .form-floating .form-control {
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .form-floating .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .form-floating label {
            color: #777;
        }

    .custom-button {
        background-color: #007bff;
        border-color: #007bff;
        transition: all 0.3s ease;
    }

        .custom-button:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<!-- JavaScript for Button Hover Animation -->
<script>
    document.querySelectorAll('.custom-button').forEach(function(button) {
        button.addEventListener('mouseover', function() {
            button.style.transform = 'scale(1.05)';
        });
        button.addEventListener('mouseout', function() {
            button.style.transform = 'scale(1)';
        });
    });
</script>
