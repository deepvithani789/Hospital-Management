@model List<HospitalManagement.ClientApp.Models.DispensedMedicineViewModel>

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary fw-bold d-flex align-items-center gap-2">
        <i class="bi bi-clipboard2-pulse-fill"></i> Dispensed Medicines
    </h2>
    <a asp-controller="Pharmacy" asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-home"></i> Back to Pharmacy
    </a>
</div>

<!-- Table Container -->
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning text-center">
                No dispensed medicine records found.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-person-fill"></i> Patient</th>
                            <th><i class="bi bi-capsule-pill"></i> Medicine</th>
                            <th><i class="bi bi-stack"></i> Quantity</th>
                            <th><i class="bi bi-clock-history"></i> Dispensed On</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold text-capitalize">@item.PatientName</td>
                                <td>@item.MedicineName</td>
                                <td>
                                    <span class="badge bg-info text-dark rounded-pill px-3">
                                        @item.Quantity
                                    </span>
                                </td>
                                <td>@item.DispensedOn.ToString("dd MMM yyyy, hh:mm tt ")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
