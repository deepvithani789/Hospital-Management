@model MedicineInventoryViewModel

<style>
    /* Container */
    .edit-medicine-container {
        max-width: 600px;
        margin: 2rem auto;
        background: #f9fafc;
        border-radius: 1rem;
        padding: 2.5rem 2rem;
        box-shadow: 0 12px 28px rgba(0,0,0,0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        text-align: center;
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: #3b3b98;
        letter-spacing: 0.05em;
    }

    /* Form groups */
    .form-group {
        margin-bottom: 1.25rem;
    }

    label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #555;
        user-select: none;
    }

    /* Neumorphic input style */
    input.form-control {
        width: 100%;
        padding: 0.85rem 1.25rem;
        font-size: 1rem;
        border-radius: 1rem;
        border: none;
        background: #e0e5ec;
        box-shadow: 6px 6px 12px #bebebe, -6px -6px 12px #ffffff;
        transition: box-shadow 0.3s ease, background 0.3s ease;
        outline: none;
        font-weight: 500;
        color: #333;
    }

        input.form-control:focus {
            background: #d4dae6;
            box-shadow: inset 3px 3px 7px #bebebe, inset -3px -3px 7px #ffffff;
        }

    /* DateTime local fix for better look */
    input[type="datetime-local"].form-control {
        padding-right: 2.5rem;
    }

    /* Submit button */
    button.btn-primary {
        width: 100%;
        padding: 1rem;
        font-size: 1.15rem;
        font-weight: 700;
        border-radius: 2rem;
        border: none;
        background: linear-gradient(135deg, #3b3b98 0%, #2575fc 100%);
        color: white;
        cursor: pointer;
        box-shadow: 0 8px 20px rgba(38, 50, 146, 0.5);
        transition: background 0.3s ease, box-shadow 0.3s ease;
        user-select: none;
    }

        button.btn-primary:hover {
            background: linear-gradient(135deg, #2575fc 0%, #3b3b98 100%);
            box-shadow: 0 12px 30px rgba(38, 50, 146, 0.7);
        }

    /* Validation error */
    .text-danger {
        font-size: 0.85rem;
        margin-top: 0.3rem;
        color: #e74c3c;
        font-weight: 600;
    }

</style>

<div class="edit-medicine-container">
    <h2>Edit Medicine</h2>
    <form asp-action="Edit" method="post" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="MedicineName">Medicine Name</label>
            <input asp-for="MedicineName" class="form-control" autocomplete="off" />
            <span asp-validation-for="MedicineName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QuantityInStock">Quantity</label>
            <input asp-for="QuantityInStock" type="number" min="0" class="form-control" autocomplete="off" />
            <span asp-validation-for="QuantityInStock" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ExpiryDate">Expiry Date</label>
            <input asp-for="ExpiryDate" type="datetime-local" min="@DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm")" class="form-control" />
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LowStockThreshold">Low Stock Threshold</label>
            <input asp-for="LowStockThreshold" type="number" min="0" class="form-control" autocomplete="off" />
            <span asp-validation-for="LowStockThreshold" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
